            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "example": "Show do Matuê"
                  },
                  "descricao": {
                    "type": "string",
                    "example": "Evento com atrações especiais"
                  },
                  "data": {
                    "type": "string",
                    "format": "date",
                    "example": "2025-06-20"
                  },
                  "local": {
                    "type": "string",
                    "example": "Ginásio Central"
                  },
